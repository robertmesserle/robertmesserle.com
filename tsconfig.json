{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "preserve",
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strict": true,
    "target": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*"
  ],
  "types": [
    "./node_modules/@types"
  ]
}
